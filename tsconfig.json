{
  "compilerOptions": {
    "newLine": "LF",
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "React",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "lib": [
      "DOM",
      "ES2017",
      "DOM.Iterable",
      "ScriptHost",
      "esnext.asynciterable"
    ],
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "assets",
    "build",
    "doc",
    "legal",
    "log",
    "node_modules",
    ".#*"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
